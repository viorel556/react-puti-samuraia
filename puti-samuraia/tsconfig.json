{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true, // ADDED idk why

    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": [
    "node_modules"
  ],

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.css"
  ],

}